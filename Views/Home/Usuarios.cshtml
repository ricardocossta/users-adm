@model List<Usuario>
@{
    ViewBag.Title = "Usuários";
}

<div class="text-center">
    <h2>Lista de Usuários</h2>
</div>
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Login</th>
                <th>Bloqueado</th>
                <th>Data Acesso</th>
                <th>Entidade</th>
                <th>Responsável</th>
                <th>Perfis</th>
                <th>Sistema</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.Nome</td>
                <td>@usuario.Login</td>
                <td>@usuario.Bloqueado</td>
                <td>@usuario.DataAcesso</td>
                <td>@usuario.Entidade.Nome</td>
                <td>@usuario.Entidade.Responsavel</td>
                <td>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var perfil in usuario.Perfis)
                            {
                                <tr>
                                    <td>@perfil.Id</td>
                                    <td>@perfil.Nome</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
                <td>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Link</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var perfil in usuario.Perfis)
                            {
                                <tr>
                                    <td>@perfil.Sistema.Nome</td>
                                    <td>@perfil.Sistema.Link</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        }
        </tbody>
    </table>
} else
{
    <p class="text-center">Nenhum usuário foi importado.</p>
}
